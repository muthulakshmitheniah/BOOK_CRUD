<div class="flex-column" style="height: auto;">
  <h1>Books</h1>
  
  <!-- Error Message -->
  <% if flash[:errors] %>
    <% flash.each do |name, message| %>
      <p class="text-danger"><%= message %></p>
    <% end %>
  <% end %>
  
  <!-- Book Table -->
  <div>
    <table class="table table-info table-striped">
    <ol class="fs-2">
      <thead class="table-secondary">
        <tr>
          <th class="text-center">ID</th>
          <th class="text-center">Title</th>
          <th class="text-center">Author</th>
          <th class="text-center">Genre</th>
          <th class="text-center">Published Date</th>
          <td colspan=3 class="text-center"> Action </td>
        </tr>
      </thead>
        <% @books.each do |book| %>
          <tr>
            <td class="text-center"><%= book.id %></td>
            <td class="text-center"><%= link_to book.title, book_path(book) %></td>
            <td class="text-center"><%= book.author %></td>
            <td class="text-center"><%= book.genre %></td>
            <td class="text-center"><%= book.published_date %></td>
            <td class="text-center"><%= button_to "Show", book_path(book), method: :get, class: "btn-success border-0 rounded-pill shadow px-3 py-2" %></td>
            <td class="text-center"><%= button_to "Edit", edit_book_path(book), method: :get, class: "btn-primary border-0 rounded-pill shadow px-3 py-2" %></td>
            <td class="text-center"><%= button_to "Delete", book_path(book), method: :delete, class: "btn-danger border-0 rounded-pill shadow px-3 py-2", data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
    </ol>
    </table>
  </div>
  
  <!-- Add New Book Button -->
  <center>
  <div class="d-flex">
    <%= button_to "Add New Book", new_book_path, method: :get, class: "btn-warning border-0 rounded-pill shadow p-3 m-3" %>
  </div>
  </center>
</div>
