<div class="flex-column">
  <div class="card shadow" style="width: 36rem;">
    <div class="card-header">
      <h2 class="text-center">Book Form</h2>
    </div>
    <div class="card-body">
      <!-- Error Message -->
      <% if flash[:errors] %>
        <% flash[:errors].each do |error| %>
          <p class="text-danger"><%= error %></p>
        <% end %>
      <% end %>
      <!-- Form Started Here -->
      <%= form_with model: @book do |f| %>
        <%= f.label :title, "Title :", class: "mt-3" %>
        <%= f.text_field :title, placeholder: "Enter Title", class: "mb-2 form-control" %>
        <br>
        <%= f.label :author, "Author :", class: "mt-3" %>
        <%= f.text_field :author, placeholder: "Enter Author", class: "mb-2 form-control" %>
        <br>
        <%= f.label :genre, "Genre :", class: "mt-3" %>
        <%= f.text_field :genre, placeholder: "Enter Genre", class: "mb-2 form-control" %>
        <br>
        <%= f.label :price, "Price :", class: "mt-3" %>
        <%= f.number_field :price, step: "50", placeholder: "Enter Price", class: "mb-2 form-control" %>
        <br>
        <%= f.label :published_date, "Published Date :", class: "mt-3" %>
        <%= f.date_field :published_date, class: "mb-2 form-control" %>
        <br>
        <%= f.submit "Save Book", class: "btn-primary border-0 rounded-pill shadow p-3" %>
      <% end %>
    </div>
  </div>
</div>
